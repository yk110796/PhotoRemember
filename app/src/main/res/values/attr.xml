<resources>
    <declare-styleable name="RobotoTextView">
        <attr name="robotoFont" format="enum">
            <enum name="lite" value="0" />
            <enum name="thin" value="1" />
            <enum name="condensed" value="2" />
            <enum name="medium" value="3" />
            <enum name="black" value="4" />
            <enum name="bold_condensed" value="5" />
            <enum name="light_italic" value="6" />
        </attr>
        <attr name="shrink_to_fit" format="boolean" />
        <attr name="minimize_width" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CardView">
        <attr name="cardStyle" format="reference" />
        <attr name="cardThumbnailStyle" format="reference" />
        <attr name="cardTitleStyle" format="reference" />
        <attr name="cardSubtitleStyle" format="reference" />
        <attr name="cardIconStyle" format="reference" />
        <attr name="cardChevronStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="AboutCard">
        <attr name="text" format="reference" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>

    <declare-styleable name="superrecyclerview">
        <attr name="layout_recyclerSelector" format="reference"/>
        <attr name="layout_empty" format="reference"/>
        <attr name="layout_moreProgress" format="reference"/>
        <attr name="layout_progress" format="reference"/>
        <attr name="recyclerClipToPadding" format="boolean"/>
        <attr name="recyclerPadding" format="dimension"/>
        <attr name="recyclerPaddingTop" format="dimension"/>
        <attr name="recyclerPaddingBottom" format="dimension"/>
        <attr name="recyclerPaddingLeft" format="dimension"/>
        <attr name="recyclerPaddingRight" format="dimension"/>
        <attr name="scrollbarStyle">
            <flag name="insideOverlay" value="0x0"/>
            <flag name="insideInset" value="0x01000000"/>
            <flag name="outsideOverlay" value="0x02000000"/>
            <flag name="outsideInset" value="0x03000000"/>
        </attr>

        <attr name="mainLayoutId" format="reference"/>
    </declare-styleable>

    <declare-styleable name="CircleCheckBox">
        <attr name="cb_color" format="color" />
        <attr name="cb_pressed_ring_width" format="dimension" />
    </declare-styleable>


</resources>