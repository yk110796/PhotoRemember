<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_height"
    android:background="@color/photrace_main_color">

    <ImageButton
        android:id="@+id/header_left_button"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/actionbar_left_padding"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:background="@null"
        />

    <ImageButton
        android:id="@+id/header_center_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:scaleType="fitCenter"
        android:background="@null"
        android:layout_alignTop="@+id/header_right_button"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/header_right_button"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/actionbar_right_padding"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:background="@null"
        />

</RelativeLayout>